{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="w-full">
        <table class="table">
            <tbody>
                <tr>
                    <th class="text-left pr-1">Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th class="text-left pr-1">Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th class="text-left pr-1">UserName</th>
                    <td>{{ user.userName }}</td>
                </tr>
                <tr>
                    <th class="text-left pr-1">ZipCode</th>
                    <td>{{ user.zipCode }}</td>
                </tr>
                <tr>
                    <th class="text-left pr-1">Email</th>
                    <td>{{ user.email }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="w-1/6">
        <div class="float-right text-white bg-black rounded full h-6 w-24 text-center">
            <a href="{{ path('user_index') }}">back to list</a>
        </div>
    </div>

    <div class="w-1/6">
        <div class="float-right text-white bg-gray-500 rounded full h-6 w-24 text-center">
            <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
        </div>
    </div>

    <div class="w-1/6">
        <div class="float-right text-white bg-red-900 rounded full h-6 w-24 text-center">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
